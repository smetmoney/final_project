<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitc.board.dao.BoardDAO">
	
	<!-- insert update delete : resultType="int" 로 고정 -->
	<insert id="create" parameterType="com.bitc.board.vo.BoardVO">
		INSERT INTO tbl_board(title,content,writer) 
		VALUES(#{title},#{content},#{writer})
	</insert>
	
	<!-- 게시글 상세보기 -->
	<!-- BoardVO read(int bno)throws Exception; -->
	<select id="read" parameterType="int" resultType="boardVO">
		SELECT * FROM tbl_board WHERE bno = #{bno}
	</select>
	<!-- 
	// 게시글 수정
	int update(BoardVO vo) throws Exception;
	-->
	<update id="update" parameterType="boardVO">
		UPDATE tbl_board SET 
		title = #{title},
		content = #{content},
		writer = #{writer}
		WHERE bno = #{bno}
	</update>
	 
	<!--  
	// 게시글 삭제
	int delete(int bno) throws Exception;
	 -->
	 <delete id="delete" parameterType="int">
	 	DELETE FROM tbl_board WHERE bno = #{bno}
	 </delete>
	 
	 <!-- 
	// 조회수 증가
	void updateCnt(int bno) throws Exception;
	 -->
	<update id="updateCnt" parameterType="int">
		UPDATE tbl_board SET 
		viewcnt = viewcnt + 1 
		WHERE bno = #{bno}
	</update> 
	 
	 <!-- 
	// 전체 게시글 목록
	List<BoardVO> listAll()throws Exception;
 	-->
 	<select id="listAll" resultType="boardVO">
 		SELECT * FROM tbl_board ORDER BY bno DESC
 	</select>
 	
 	<!-- 
	// 전체 게시물 개수
	int totalCount() throws Exception;
	 -->
	 <select id="totalCount" resultType="int">
	 	SELECT count(*) FROM tbl_board
	 </select>
	 
	 <!-- 
	// 페이징 처리된 게시물 목록
	List<BoardVO> listCriteria(Criteria cri)throws Exception;
	 -->
	 <!-- com.bitc.board.util.Criteria == criteria -->
	 <select id="listCriteria" 
	 		parameterType="criteria" 
	 		resultType="boardVO">
	 	SELECT * FROM tbl_board
	 	ORDER BY bno DESC
	 	limit #{startRow}, ${perPageNum}
	 </select>
	 
	 
</mapper>









